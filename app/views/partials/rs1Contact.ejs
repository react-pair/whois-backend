<div class="well">
  <div class="row">
    <div class="col-xs-6 ">
      <img class=" img-responsive" src="..." alt="Card image cap" style="height: 100px; width: 100px; border-radius:50%; background-color:rgba(70,130,180,0.5); margin-bottom:10px;">
      <hr>
      <div class="card-block">
        <p class="card-text">
          Name: <%= name %>
        </br>
          Position: <%= position %>
        </p>
      </div>
      <div class="row">
        <div class="col-xs-3">
          <form action="/delete/<%= receiver_id %>?_method=DELETE" method="POST" id="deleteform" class="form-horizontal " role="form">
            <button id="btn-delete" type="submit" class="btn btn-default btn-xs glyphicon glyphicon-trash" style="margin-bottom:10px;"><i class="icon-hand-right"></i></button>
          </form>
        </div>
        <div class="col-xs-3 pull-left">
          <a href="/edit/<%= receiver_id %>">
            <button id="btn-edit" class="btn btn-default btn-xs glyphicon glyphicon-cog"><i class="icon-hand-right" style="background-color: transparent; margin-bottom:10px;"></i></button>
          </a>
        </div>
      </div>
    </div>
    <form method="POST" action="/contacts/:user_id">
      <div style="margin-bottom: 25px" class="input-group">
        <input id="sender_id" type="hidden" class="form-control" name="sender_id" value="<%= sender_id %>" placeholder="">
        <input id="receiver_id" type="hidden" class="form-control" name="receiver_id" value="<%= receiver_id %>" placeholder="">
        <input id="rs_type" type="hidden" class="form-control" name="rs_type" value=1 placeholder="">
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <button id="btn-signup" type="disabled" class="btn btn-info"><i class="icon-hand-right"></i>Awaiting Response</button>
        </div>
    </form>
  </div>
</div>
