<form method="POST" action="/contacts/:user_id">
  <div style="margin-bottom: 25px" class="input-group">
      <input id="sender_id" type="hidden" class="form-control" name="sender_id" value="<%= sender_id %>" placeholder="">
      <input id="receiver_id" type="hidden" class="form-control" name="receiver_id" value="<%= receiver_id %>" placeholder="">
      <input id="rs_type" type="hidden" class="form-control" name="rs_type" value=1 placeholder="">
  </div>
  <div class="form-group">
      <div class="col-md-offset-3 col-md-9">
          <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Send Request</button>
      </div>
</form>
